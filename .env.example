# Kubernetes 考試模擬器環境變數範例
# 複製此檔案為 .env 並設定實際值

# 資料庫配置
DATABASE_URL=sqlite:///./data/exam.db

# Redis 配置
REDIS_URL=redis://redis:6379/0

# 應用配置
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Docker 配置
DOCKER_HOST=unix:///var/run/docker.sock

# Kubespray 配置
KUBESPRAY_IMAGE=quay.io/kubespray/kubespray:latest

# VNC 配置
VNC_PASSWORD=examvnc
VNC_RESOLUTION=1920x1080

# 網路配置
NGINX_PORT=80
NGINX_SSL_PORT=443

# 檔案路徑
DATA_DIR=/app/data
SSH_KEY_PATH=/root/.ssh/id_rsa

# 考試配置
MAX_CONCURRENT_SESSIONS=1
SESSION_TIMEOUT_MINUTES=180
DEFAULT_EXAM_DURATION_MINUTES=120

# 安全配置
CORS_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1

# 日誌配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 備份配置
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30